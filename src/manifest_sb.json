{
    "name": "SelectionBar",
    "version": "3.1",

    "manifest_version": 2,
    "description": "This extension add a powerful bar when you selecting text. Capture, Translate, Share, Highlight, and... ",
    "icons": {
        "48": "images/icon48sb.png",
        "128": "images/icon128sb.png"
    },
    "background": {
        "page": "background.html"
    },
    "default_locale": "en",
    "browser_action": {
        "default_icon": "images/icon19sb.png",
        "default_title": "Webpage Screenshot Bar",
        "default_popup": "popup_sb.html"
    },

    "web_accessible_resources": [
        "/images/googleimages.png",
        "/images/copy.png",
        "/images/blogger.png",
        "/images/email.png",
        "/images/evernote.png",
        "/images/facebook.png",
        "/images/gmail.png",
        "/images/googledrive.png",
        "/images/gplus.png",
        "/images/microsoft.png",
        "/images/myspace.png",
        "/images/newwindow.png",
        "/images/pinterest.png",
        "/images/print.png",
        "/images/qrcode.png",
        "/images/search.png",
        "/images/tineye.png",
        "/images/translate.png",
        "/images/twitter.png",
        "/images/vk.png",
        "/images/webpagescreenshot.png",
        "/images/wordpress.png",
        "/images/crop.png",
        "/images/speak.png",
        "/images/share.png",
        "/images/tumblr.png",
        "/images/uploady.png",



        "/images/highlight.png",
        "/images/enlarge.png",
        "/images/ensmall.png",
        "/images/erase.png",
        "/images/edittext.png",
        "/images/help.png",
        "/images/left.png",
        "/images/right.png",
        "/images/del.png",
        "/images/digg.png",
        "/images/dropbox.png",
        "/images/save.png",
        "/images/copy-text.png",
        "/images/link-go.png",

        "/images/fast.png",
        "/images/pitch.png",
        "/libs/jquery-ui-1.9.2.custom.min.css",
        "/css/pagestyles.css",
        "/css/dialog.css",

        "/libs/gapi.js",
        "/libs/jquery.js",
        "/js/dialog.js"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.googleapis.com https://ad.yieldmanager.com https://cdn.extensionanalytics.com https://ssl.google-analytics.com; object-src 'self'",
    "default_locale": "en",
    "permissions": [
        "tts","notifications","activeTab","storage", "unlimitedStorage",
        "webNavigation","desktopCapture", "webRequest", "tabs",
        "file://*/*", "http://*/*", "https://*/*",
        "pageCapture", "tabCapture","clipboardWrite","<all_urls>"
    ]
}